<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pdm.eisi.fia.ues.sv.tareapdm.ConsultarAlum_Pro"
    android:background="@drawable/as">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carnet"
                android:id="@+id/textView12"
                android:textColor="#ffff" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/carnet"
                android:textColor="#fff" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codProyecto"
                android:id="@+id/textView13"
                android:textColor="#ffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/codProyecto"
                android:textColor="#fff" />
        </TableRow>
        <TableRow>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codActividad"
                android:id="@+id/textView14"
                android:textColor="#ffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/codActividad"
                android:textColor="#fff" />
        </TableRow>

        <TableRow>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:background="@android:drawable/ic_search_category_default"
                android:clickable="true"
                android:onClick="buscarAlumnoProyecto" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:background="@android:drawable/ic_notification_clear_all"
                android:clickable="true"
                android:onClick="clearScreen" />
        </TableRow>

    </TableLayout>
</ScrollView>
