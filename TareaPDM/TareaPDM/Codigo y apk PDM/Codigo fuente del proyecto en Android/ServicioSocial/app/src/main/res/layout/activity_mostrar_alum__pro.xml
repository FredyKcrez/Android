<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pdm.eisi.fia.ues.sv.tareapdm.InsertarAlum_Pro"
    android:stretchColumns="1"
    android:background="@drawable/as">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumno"
                android:id="@+id/textView8"
                android:textColor="#ffff" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/carnet"
                android:enabled="true"
                android:textColor="#ffff" />
        </TableRow>
        <TableRow>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proyecto"
                android:id="@+id/textView10"
                android:textColor="#ffff" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/codProyecto1"
                android:enabled="true"
                android:textColor="#ffff" />
        </TableRow>

        <TableRow>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividades"
                android:id="@+id/textView11"
                android:textColor="#ffff" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/codActividad2"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total HorasSociales "
                android:id="@+id/textView17"
                android:textColor="#fff"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/porcentaje"
                android:layout_column="1"
                android:textColor="#fff" />
        </TableRow>

        <TableRow>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_column="1"
                android:max="500"
                android:background="#5d0d0609" />

        </TableRow>
        <TableRow>

        </TableRow>

    </TableLayout>

</ScrollView>
